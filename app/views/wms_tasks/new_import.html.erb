<div class="container py-4">
  <h1 class="h3 mb-4">Importar Tarefas WMS</h1>

  <%= form_with url: import_wms_tasks_path, local: true, html: { multipart: true }, class: "card p-4 shadow-sm" do |form| %>
    <div class="mb-3">
      <%= form.label :file, "Arquivo Excel (XLSX)", class: "form-label" %>
      <%= form.file_field :file, accept: '.xlsx', class: "form-control", required: true %>
      <small class="form-text text-muted">
        Estrutura esperada: Tarefa | Tipo | Placa Carreta | Palete | Usuário | Data Última Associação | Data de Alteração
      </small>
    </div>

    <%= form.submit "Importar", class: "btn btn-primary" %>
  <% end %>

  <div class="mt-3">
    <%= link_to "Voltar", wms_tasks_path, class: "btn btn-outline-secondary" %>
  </div>
</div>
