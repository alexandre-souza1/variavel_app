<div class="container my-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3">Templates de Checklists</h1>
    <%= link_to "Novo Template", new_checklist_template_path, class: "btn btn-primary shadow-sm" %>
  </div>

  <div class="row">
    <% @templates.each do |template| %>
      <div class="col-md-6 col-lg-4 mb-4">
        <div class="card shadow-sm h-100">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= template.name %></h5>
            <p class="card-text text-muted">
              Criado em: <%= l(template.created_at, format: :short) %>
            </p>
            <div class="mt-auto d-flex justify-content-between">
              <%= link_to "Ver/Editar", checklist_template_path(template), class: "btn btn-sm btn-outline-primary" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%= link_to "Voltar", root_path, class: "btn btn-primary shadow-sm p-3 w-100" %>
</div>
