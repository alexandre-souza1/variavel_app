<div class="card shadow-sm mb-4">
  <h3 class="card-header">Editar Template</h3>

  <div class="card-body">
    <%= form_with(model: @template, local: true) do |f| %>
      <div class="mb-3">
        <%= f.label :name, "Nome do Template" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :setor, "Setor" %>
        <%= f.text_field :setor, class: "form-control" %>
      </div>

      <div class="form-check mb-2">
        <%= f.check_box :plate_required, class: "form-check-input" %>
        <%= f.label :plate_required, "Exigir placa", class: "form-check-label" %>
      </div>

      <div class="form-check mb-2">
        <%= f.check_box :kilometer_required, class: "form-check-input" %>
        <%= f.label :kilometer_required, "Exigir quilometragem", class: "form-check-label" %>
      </div>

      <div class="form-check mb-2">
        <%= f.check_box :gas_state_required, class: "form-check-input" %>
        <%= f.label :gas_state_required, "Exigir nível de combustível", class: "form-check-label" %>
      </div>

      <div class="form-check mb-2">
        <%= f.check_box :vehicle_model_required, class: "form-check-input" %>
        <%= f.label :vehicle_model_required, "Exigir modelo do veículo", class: "form-check-label" %>
      </div>

      <div class="form-check mb-3">
        <%= f.check_box :responsavel_required, class: "form-check-input" %>
        <%= f.label :responsavel_required, "Exigir responsável", class: "form-check-label" %>
      </div>

      <%= f.submit "Salvar alterações", class: "btn btn-primary" %>
      <%= link_to "Cancelar", checklist_template_path(@template), class: "btn btn-secondary ms-2" %>
    <% end %>
  </div>
</div>

<div class="my-4">
  <div class="card shadow-sm mb-4">
    <div class="card-header">
      <h5 class="mb-0">Adicionar Item ao Checklist</h5>
    </div>
    <div class="card-body">
      <%= form_with model: [@template, @item], local: true do |f| %>
        <div class="row g-2">
          <div class="col-md-10">
            <%= f.text_field :description, class: "form-control", placeholder: "Descrição do item" %>
          </div>
          <div class="col-md-2">
            <%= f.submit "Adicionar", class: "btn btn-success w-100" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="card shadow-sm mb-4">
    <div class="card-header">
      <h5 class="mb-0">Itens do Template</h5>
    </div>
    <ul class="list-group list-group-flush">
      <% @template.checklist_items.each do |item| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <span><%= item.description %></span>
        </li>
      <% end %>
      <% if @template.checklist_items.empty? %>
        <li class="list-group-item text-muted text-center">Nenhum item adicionado ainda.</li>
      <% end %>
    </ul>
  </div>
</div>
