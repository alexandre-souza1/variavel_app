<%= render 'layouts/admin_nav' %>
<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Categorias Orçamentárias</h1>
    <%= link_to 'Nova Categoria', new_admin_budget_category_path, class: 'btn btn-primary' %>
  </div>

  <div class="card">
    <div class="card-body">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Nome</th>
            <th>Setor</th>
            <th>Ações</th>
          </tr>
        </thead>
        <tbody>
          <% @budget_categories.each do |category| %>
            <tr>
              <td><%= category.name %></td>
              <td><span class="badge bg-secondary"><%= category.sector %></span></td>
              <td>
                <%= link_to 'Editar', edit_admin_budget_category_path(category), class: 'btn btn-sm btn-warning' %>
                <%= button_to 'Excluir', admin_budget_category_path(category),
                              method: :delete,
                              class: 'btn btn-sm btn-danger',
                              data: { confirm: 'Tem certeza?' } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
