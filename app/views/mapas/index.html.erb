<div class="container py-4">
  <h1 class="h3 mb-4">Importar Dados dos Mapas (2ART)</h1>

  <%= form_with url: import_mapas_path, local: true, multipart: true, class: "card p-4 shadow-sm" do %>
    <div class="mb-3">
      <label class="form-label">Arquivo CSV:</label>
      <%= file_field_tag :file, class: "form-control" %>
    </div>

    <%= submit_tag "Importar", class: "btn btn-primary" %>
  <% end %>

  <div class="mt-3 d-flex gap-2">
    <%= link_to "Voltar", root_path, class: "btn btn-outline-secondary" %>
    <%= link_to "Ver todos os mapas cadastrados", mapas_todos_path, class: "btn btn-outline-info" %>
  </div>
</div>
