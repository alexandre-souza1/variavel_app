<div class="card shadow-lg rounded-4 border-0">
  <!-- Cabeçalho do Card -->
  <div class="card-header bg-primary text-white rounded-top-4 py-3">
    <div class="d-flex justify-content-between align-items-center">
      <h1 class="h5 mb-0 fw-bold">
        <i class="fas fa-user-edit me-2"></i>Editar Usuário
      </h1>
      <%= link_to "Voltar", admin_users_path, class: "btn btn-light btn-sm" %>
    </div>
  </div>

  <!-- Corpo do Card -->
  <div class="card-body p-4">
    <%= form_with(model: [:admin, @user], local: true, html: { multipart: true }) do |f| %>
      <% if @user.errors.any? %>
        <div class="alert alert-danger">
          <h5 class="fw-bold">Ocorreram erros:</h5>
          <ul class="mb-0">
            <% @user.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-3">
        <%= f.label :name, "Nome", class: "form-label fw-semibold" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :email, "E-mail", class: "form-label fw-semibold" %>
        <%= f.email_field :email, class: "form-control" %>
      </div>

      <div class="mb-4">
        <%= f.label :photo, "Foto de perfil", class: "form-label fw-semibold" %>
        <%= f.file_field :photo, class: "form-control" %>
        <% if @user.photo.attached? %>
          <div class="mt-3 d-flex align-items-center gap-3">
            <p class="mb-0">Foto atual:</p>
            <%= image_tag @user.photo.variant(resize_to_limit: [150, 150]), class: "rounded-circle border" %>
            <%= f.check_box :remove_photo, {}, "1", "0" %>
            <%= f.label :remove_photo, "Remover foto", class: "mb-0" %>
          </div>
        <% end %>
      </div>

      <% if current_user.admin? %>
        <div class="mb-3">
          <%= f.label :role, "Perfil", class: "form-label fw-semibold" %>
          <%= f.select :role, [["Admin", "admin"], ["Supervisor", "supervisor"], ["Usuário", "user"]], {}, class: "form-select" %>
        </div>
      <% end %>

      <hr class="my-4">

      <h5 class="mb-3">Alterar Senha <small class="text-muted">(opcional)</small></h5>
      <div class="mb-3">
        <%= f.label :password, "Nova senha", class: "form-label fw-semibold" %>
        <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
      </div>

      <div class="mb-4">
        <%= f.label :password_confirmation, "Confirmação da nova senha", class: "form-label fw-semibold" %>
        <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
      </div>

      <div class="d-flex justify-content-end">
        <%= f.submit "Salvar", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>

  <!-- Rodapé do Card -->
  <div class="card-footer bg-light rounded-bottom-4 py-3 text-center">
    <small class="text-muted">Atualize os dados do usuário conforme necessário.</small>
  </div>
</div>
