<div class="container my-5">
  <% if notice %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Fornecedores</h1>
    <div class="d-flex gap-2">
      <%= link_to "Novo Fornecedor", new_supplier_path, class: "btn btn-primary" %>
    </div>
  </div>

  <!-- Tabela de fornecedores -->
  <div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
      <thead class="table-light">
        <tr>
          <th>Nome</th>
          <th>CNPJ</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
        <% @suppliers.each do |supplier| %>
          <tr>
            <td><%= supplier.name %></td>
            <td><%= supplier.cnpj %></td>
            <td>
              <div class="d-inline-flex gap-2">
                <%= link_to "Ver", supplier_path(supplier), class: "btn btn-sm btn-outline-secondary" %>
                <%= link_to "Editar", edit_supplier_path(supplier), class: "btn btn-sm btn-outline-primary" %>
                <%= button_to "Excluir", supplier_path(supplier),
                  method: :delete,
                  data: { turbo_confirm: "Tem certeza?" },
                  class: "btn btn-sm btn-outline-danger" %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= link_to "Voltar", root_path, class: "btn btn-primary shadow-sm p-3 w-100 mt-2" %>
</div>
