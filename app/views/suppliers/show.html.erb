<p style="color: green"><%= notice %></p>

<div class="container mt-4">
  <div class="card">
    <div class="card-header bg-primary text-white">
      <div class="d-flex justify-content-between align-items-center">
        <h4 class="mb-0"><i class="fas fa-building me-2"></i>Detalhes do Fornecedor</h4>
        <div>
          <%= link_to edit_supplier_path(@supplier), class: "btn btn-warning btn-sm me-2" do %>
            <i class="fas fa-edit me-1"></i>Editar
          <% end %>
          <%= button_to @supplier, method: :delete,
                        data: { turbo_confirm: "Tem certeza que deseja excluir este fornecedor?" },
                        class: "btn btn-danger btn-sm",
                        form_class: "d-inline" do %>
            <i class="fas fa-trash me-1"></i>Excluir
          <% end %>
        </div>
      </div>
    </div>

    <div class="card-body">
      <div class="row">
        <div class="col-md-12 mb-4">
          <h5 class="text-primary border-bottom pb-2"><i class="fas fa-id-card me-2"></i>Dados Cadastrais</h5>
        </div>

        <div class="col-md-6">
          <div class="mb-3">
            <strong class="text-muted"><i class="fas fa-signature me-2"></i>Razão Social:</strong>
            <p class="fs-5"><%= @supplier.name %></p>
          </div>

          <div class="mb-3">
            <strong class="text-muted"><i class="fas fa-id-card me-2"></i>CNPJ:</strong>
            <p class="fs-5"><%= CNPJ.new(@supplier.cnpj).formatted %></p>
          </div>

          <div class="mb-3">
            <strong class="text-muted"><i class="fas fa-info-circle me-2"></i>Situação:</strong>
            <p class="fs-5">
              <span class="badge bg-<%= @supplier.situation == 'ATIVA' ? 'success' : 'warning' %>">
                <%= @supplier.situation.presence || 'Não informada' %>
              </span>
            </p>
          </div>
        </div>

        <div class="col-md-6">
          <div class="mb-3">
            <strong class="text-muted"><i class="fas fa-envelope me-2"></i>E-mail:</strong>
            <p class="fs-5">
              <% if @supplier.email.present? %>
                <%= mail_to @supplier.email, @supplier.email, class: "text-decoration-none" %>
              <% else %>
                <span class="text-muted fst-italic">Não informado</span>
              <% end %>
            </p>
          </div>

          <div class="mb-3">
            <strong class="text-muted"><i class="fas fa-phone me-2"></i>Telefone:</strong>
            <p class="fs-5"><%= @supplier.phone.presence || 'Não informado' %></p>
          </div>
        </div>
      </div>

      <% if @supplier.street.present? || @supplier.city.present? %>
      <div class="row mt-4">
        <div class="col-md-12 mb-4">
          <h5 class="text-primary border-bottom pb-2"><i class="fas fa-map-marker-alt me-2"></i>Endereço</h5>
        </div>

        <div class="col-md-12">
          <div class="mb-3">
            <strong class="text-muted"><i class="fas fa-road me-2"></i>Endereço Completo:</strong>
            <p class="fs-5">
              <%= [@supplier.street, @supplier.number, @supplier.complement].compact.join(', ') %>
              <% if @supplier.neighborhood.present? %> - <%= @supplier.neighborhood %><% end %>
              <% if @supplier.city.present? %> - <%= @supplier.city %><% end %>
              <% if @supplier.state.present? %>/<%= @supplier.state %><% end %>
              <% if @supplier.zip_code.present? %> - CEP: <%= @supplier.zip_code %><% end %>
            </p>
          </div>
        </div>
      </div>
      <% end %>

      <div class="row mt-4">
        <div class="col-md-12 mb-4">
          <h5 class="text-primary border-bottom pb-2">
            <i class="fas fa-file-invoice me-2"></i>Contas Cadastradas
            <span class="badge bg-secondary ms-2"><%= @supplier.invoices.count %></span>
          </h5>
        </div>

        <div class="col-md-12">
          <% if @supplier.invoices.any? %>
            <div class="table-responsive">
              <table class="table table-striped table-hover align-middle">
                <thead class="table-light">
                  <tr>
                    <th>Número(s) NF</th>
                    <th>Data</th>
                    <th>Valor</th>
                    <th>Categoria</th>
                    <th>Ações</th>
                  </tr>
                </thead>
                <tbody>
                  <% @supplier.invoices.each do |invoice| %>
                    <tr>
                      <td>
                        <% if invoice.invoice_numbers.any? %>
                          <% invoice.invoice_numbers.each do |invoice_number| %>
                            <span class="badge bg-info me-1"><%= invoice_number.number %></span>
                          <% end %>
                        <% else %>
                          <span class="text-muted fst-italic">Sem número</span>
                        <% end %>
                      </td>
                      <td><%= l(invoice.date_issued, format: :short) rescue invoice.date_issued.strftime('%d/%m/%Y') %></td>
                      <td class="fw-bold text-success">R$ <%= number_to_currency(invoice.total, unit: "", separator: ",", delimiter: ".") %></td>
                      <td><span class="badge bg-primary"><%= invoice.budget_category.titleize %></span></td>
                      <td>
                        <%= link_to invoice_path(invoice), class: "btn btn-sm btn-outline-primary", title: "Ver detalhes" do %>
                          <i class="fas fa-eye"></i>
                        <% end %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <div class="text-center py-4">
              <i class="fas fa-file-invoice fa-3x text-muted mb-3"></i>
              <p class="text-muted fs-5">Nenhuma nota fiscal cadastrada para este fornecedor</p>
              <%= link_to "Cadastrar Nova NF", new_invoice_path, class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="card-footer bg-light">
      <div class="d-flex justify-content-between align-items-center">
        <small class="text-muted">
          <i class="fas fa-plus-circle me-1"></i>Criado em: <%= l(@supplier.created_at, format: :short) rescue @supplier.created_at.strftime('%d/%m/%Y %H:%M') %>
        </small>
        <small class="text-muted">
          <i class="fas fa-sync-alt me-1"></i>Atualizado em: <%= l(@supplier.updated_at, format: :short) rescue @supplier.updated_at.strftime('%d/%m/%Y %H:%M') %>
        </small>
      </div>
    </div>
  </div>

  <div class="mt-3">
    <%= link_to "Voltar", suppliers_path, class: "btn btn-primary shadow-sm p-3 w-100 mt-2" %>
  </div>
</div>
