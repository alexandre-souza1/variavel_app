<div class="bg-light min-vh-100">
  <div class="container py-4">
    <!-- Card Principal -->
    <div class="card shadow-lg rounded-4 border-0">
      <!-- Cabeçalho do Card -->
      <div class="card-header bg-primary text-white rounded-top-4 py-3">
        <div class="d-flex justify-content-between align-items-center">
          <h1 class="h4 mb-0 fw-bold">
            <i class="fas fa-car me-2"></i>Registros de Autonomia
          </h1>
          <% if current_user&.admin? %>
            <%= link_to new_autonomy_path, class: "btn btn-sm btn-light" do %>
              <i class="fas fa-plus me-1"></i> Nova Autonomia
            <% end %>
          <% end %>
        </div>
      </div>

      <div class="card-body p-4">
        <% if current_user&.admin? %>
          <!-- Visão do Administrador (como estava originalmente) -->
          <div class="table-responsive">
            <table class="table table-hover align-middle">
              <thead class="table-light">
                <tr>
                  <th class="fw-bold">Matrícula</th>
                  <th class="fw-bold">Tipo de Usuário</th>
                  <th class="fw-bold">Equipamento</th>
                  <th class="fw-bold">Tipo de Serviço</th>
                  <th class="fw-bold">Placa</th>
                  <th class="fw-bold">Relato</th>
                  <th class="fw-bold">Evidência</th>
                  <th class="fw-bold">Data</th>
                </tr>
              </thead>
              <tbody>
                <% @autonomies.each do |autonomy| %>
                  <tr class="border-top">
                    <td><%= autonomy.registration %></td>
                    <td><%= autonomy.user_type %></td>
                    <td><%= autonomy.equipment_type %></td>
                    <td><%= autonomy.service_type %></td>
                    <td><%= autonomy.plate %></td>
                    <td><%= truncate(autonomy.report, length: 30) %></td>
                    <td>
                      <% if autonomy.evidence.attached? %>
                        <%= link_to url_for(autonomy.evidence), target: '_blank', class: 'btn btn-sm btn-outline-primary' do %>
                          <i class="fas fa-eye me-1"></i> Visualizar
                        <% end %>
                      <% else %>
                        <span class="text-muted">N/A</span>
                      <% end %>
                    </td>
                    <td><%= I18n.l(autonomy.created_at, format: :short) %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>

          <!-- Paginação para admin -->
          <div class="d-flex justify-content-center mt-4">
            <%= paginate @autonomies, class: 'pagination' %>
          </div>
        <% else %>
          <!-- Visão para usuários não logados ou não admin -->
          <div class="row justify-content-center">
            <div class="col-md-8">
              <%= form_with url: autonomies_path, method: :get, local: true, class: "mb-4" do |f| %>
                <div class="input-group">
                  <%= f.text_field :search,
                                  class: "form-control form-control-lg",
                                  placeholder: "Digite a matrícula para buscar",
                                  value: params[:search] %>
                  <%= f.submit "Buscar", class: "btn btn-primary btn-lg" %>
                  <%= link_to "Limpar", autonomies_path, class: "btn btn-outline-secondary btn-lg" %>
                </div>
              <% end %>

              <% if @autonomies.any? %>
                <div class="list-group">
                  <% @autonomies.each do |autonomy| %>
                    <div class="list-group-item mb-3">
                      <div class="d-flex justify-content-between">
                        <h5 class="mb-1">Matrícula: <%= autonomy.registration %></h5>
                        <small class="text-muted"><%= I18n.l(autonomy.created_at, format: :short) %></small>
                      </div>
                      <p class="mb-1"><strong>Equipamento:</strong> <%= autonomy.equipment_type %></p>
                      <p class="mb-1"><strong>Serviço:</strong> <%= autonomy.service_type %></p>
                      <p class="mb-1"><strong>Placa:</strong> <%= autonomy.plate %></p>
                      <p class="mb-2"><strong>Relato:</strong> <%= truncate(autonomy.report, length: 100) %></p>
                      <% if autonomy.evidence.attached? %>
                        <%= link_to url_for(autonomy.evidence), target: '_blank', class: 'btn btn-sm btn-outline-primary' do %>
                          <i class="fas fa-eye me-1"></i> Visualizar Evidência
                        <% end %>
                      <% end %>
                    </div>
                  <% end %>
                </div>

                <!-- Paginação para busca -->
                <div class="d-flex justify-content-center mt-4">
                  <%= paginate @autonomies, class: 'pagination' %>
                </div>
              <% elsif params[:search].present? %>
                <div class="alert alert-info text-center">
                  Nenhum registro encontrado para a matrícula "<%= params[:search] %>"
                </div>
              <% else %>
                <div class="alert alert-info text-center">
                  Utilize o campo acima para buscar registros por matrícula
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Rodapé do Card -->
      <div class="card-footer bg-light rounded-bottom-4 py-3">
        <small class="text-muted">
          <% if current_user&.admin? %>
            Total de registros: <%= @autonomies.count %>
          <% else %>
            <% if params[:search].present? %>
              Resultados para: <%= params[:search] %>
            <% else %>
              Sistema de Registros de Autonomia
            <% end %>
          <% end %>
        </small>
      </div>
    </div>
  </div>
</div>
