<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3">Resultados Diários AZ</h1>
    <%= link_to 'Novo Lançamento', new_az_mapa_path, class: "btn btn-primary" %>
  </div>

  <div class="table-responsive">
    <table class="table table-bordered table-striped table-hover align-middle">
      <thead class="table-dark text-center">
        <tr>
          <th>Data</th>
          <th>Turno</th>
          <th>Tipo</th>
          <th>Resultado</th>
          <th>Atingiu Meta</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
        <% @az_mapas.order(data: :desc, turno: :asc).each do |mapa| %>
          <tr class="text-center">
            <td><%= mapa.data.strftime("%d/%m/%Y") %></td>
            <td><%= mapa.turno.map { |t| turno_label(t) }.join(", ") %></td>
            <td><%= mapa.tipo.humanize.titleize %></td>
            <td><%= mapa.resultado %></td>
            <td>
              <% if mapa.atingiu_meta? %>
                <span class="badge bg-success">Sim</span>
              <% else %>
                <span class="badge bg-danger">Não</span>
              <% end %>
            </td>
            <td>
              <%= link_to 'Editar', edit_az_mapa_path(mapa), class: "btn btn-sm btn-warning me-1" %>
              <%= link_to 'Excluir', az_mapa_path(mapa), method: :delete, data: { confirm: "Tem certeza?" }, class: "btn btn-sm btn-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
