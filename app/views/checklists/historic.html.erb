<div class="container my-4">
  <div class="row">
    <!-- Histórico de Checklists -->
    <div class="col-12 mb-4">
      <div class="card shadow-sm">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h5 class="mb-0">Histórico de Checklists</h5>
        </div>
        <ul class="list-group list-group-flush">
          <% @checklists.order(created_at: :desc).each do |checklist| %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <div>
                <strong><%= checklist.checklist_template.name %></strong>
                <small class="text-muted">
                  • <%= l checklist.created_at, format: :short %>
                  <% if checklist.user.present? %>
                    • por <%= checklist.user.email %>
                  <% end %>
                </small>
              </div>
              <%= link_to "Ver", checklist_path(checklist), class: "btn btn-sm btn-outline-primary" %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>

    <!-- Botões de navegação -->
    <div class="col-12 d-flex flex-column mb-4">
      <div class="mt-auto">
        <%= link_to "Voltar", root_path, class: "btn btn-primary shadow-sm p-3 w-100" %>
      </div>
    </div>
  </div>
</div>
