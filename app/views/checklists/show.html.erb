<div class="container my-4">
  <!-- Cabeçalho -->
  <div class="card shadow-sm mb-4">
    <div class="card-header">
      <h4 class="mb-0"><%= @checklist.checklist_template.name %></h4>
    </div>
    <div class="card-body">
      <p class="mb-1">
        <strong>Respondido por:</strong>
        <%= @checklist.user.name.presence || @checklist.user.email %>
      </p>

      <p class="mb-1">
        <strong>Realizado às:</strong>
        <%= l(@checklist.created_at, format: :long) %>
      </p>

      <% if @checklist.plate.present? %>
        <p class="mb-1">
          <strong>Placa selecionada:</strong>
          <span class="badge bg-info text-dark"><%= @checklist.plate.placa %></span>
        </p>
      <% elsif @checklist.placa_manual.present? %>
        <p class="mb-1">
          <strong>Placa informada:</strong>
          <span class="badge bg-secondary"><%= @checklist.placa_manual %></span>
        </p>
      <% end %>

      <% if @checklist.vehicle_model.present? %>
        <p class="mb-1">
          <strong>Modelo do veículo:</strong>
          <%= @checklist.vehicle_model %>
        </p>
      <% end %>

      <% if @checklist.kilometer.present? %>
        <p class="mb-1">
          <strong>Quilometragem:</strong>
          <%= number_with_delimiter(@checklist.kilometer, delimiter: ".") %> km
        </p>
      <% end %>

      <% if @checklist.gas_state.present? %>
        <p class="mb-1">
          <strong>Nível de combustível:</strong>
          <%= {
                "full" => "Cheio",
                "three_quarters" => "3/4",
                "half" => "1/2",
                "quarter" => "1/4",
                "empty" => "Vazio"
              }[@checklist.gas_state] || @checklist.gas_state %>
        </p>
      <% end %>

      <% if @checklist.responsavel.present? %>
        <p class="mb-0">
          <strong>Responsável:</strong>
          <%= @checklist.responsavel %>
        </p>
      <% end %>
    </div>
  </div>

  <!-- Respostas -->
  <div class="card shadow-sm">
    <div class="card-header">
      <h5 class="mb-0">Respostas</h5>
    </div>
    <ul class="list-group list-group-flush">
      <% @checklist.checklist_responses.each do |resp| %>
        <li class="list-group-item">
          <div class="d-flex justify-content-between align-items-center">
            <strong><%= resp.checklist_item.description %></strong>
            <span class="badge <%= resp.status == "ok" ? "bg-success" : "bg-danger" %>">
              <%= resp.status.upcase %>
            </span>
          </div>

          <% if resp.comment.present? %>
            <p class="mt-2 mb-1"><strong>Comentário:</strong> <%= resp.comment %></p>
          <% end %>

          <% if resp.photo.attached? %>
            <div class="mt-2">
              <%= image_tag resp.photo.variant(resize_to_limit: [600, 600]),
                            class: "img-fluid rounded shadow-sm border" %>
            </div>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>

  <!-- Botões -->
  <div class="mt-4 d-flex justify-content-between align-items-center">
    <%= link_to "Voltar", checklists_path, class: "btn btn-secondary shadow-sm px-4" %>
    <%= link_to "Baixar PDF", checklist_path(@checklist, format: :pdf), class: "btn btn-primary shadow-sm px-4" %>
  </div>
</div>
